@model IEnumerable<WebApplication1.Data.Employee>
@using WebApplication1.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@inject SignInManager<User> SignIn
@inject UserManager<User> Manager
@{
    ViewData["Title"] = "Index";
}



@if (SignIn.IsSignedIn(User) && await Manager.IsInRoleAsync(Manager.GetUserAsync(User).Result, "admin"))
{<h1>
        Служители
    </h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Създай </a>
    </p>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card text-center" style="width: 20rem; ">
                    <img class="card-img-top rounded-circle" src="@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name @item.SecondName @item.LastName</h5>
                        <p class="card-text">За връзка: @item.Email </p>
                        <p class="card-text">Позиция: @item.EmployeersPosition  </p>
                    </div>
                    <div class="card-body">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редактирай</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Детайли</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Изтриване</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (SignIn.IsSignedIn(User) == true)
{
    <h1>
        Служители
    </h1>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card text-center" style="width: 20rem; ">
                  <img class="card-img-top" src="@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name @item.SecondName @item.LastName</h5>
                        <p class="card-text">За връзка: @item.Email </p>
                        <p class="card-text">Позиция: @item.EmployeersPosition  </p>
                    </div>
                    <div class="card-body">
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{

    <h1>
        Служители
    </h1>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card text-center" style="width: 20rem; ">
                   <img class="card-img-top rounded-circle" src="@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name @item.SecondName @item.LastName</h5>
                        <p class="card-text">За връзка: @item.Email </p>
                        <p class="card-text">Позиция: @item.EmployeersPosition  </p>
                    </div>
                    <div class="card-body">
                    </div>
                </div>
            </div>
        }
    </div>
}
